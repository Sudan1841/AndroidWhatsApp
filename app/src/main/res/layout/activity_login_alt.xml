                <ImageView
                    android:id="@+id/login_image"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/login_image"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/inputs"
                    android:drawableEnd="@drawable/email"
                    android:hint="E-Mail"
                    android:inputType="textEmailAddress"
                    android:padding="4dp"
                    android:textColorHint="@color/login_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@id/login_email"
        android:layout_marginTop="8dp"
        android:background="@drawable/inputs"
        android:drawableEnd="@drawable/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="4dp"
        android:textColorHint="@color/login_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email" />

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_password"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/login_button_bg"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_password" />

                <TextView
                    android:id="@+id/need_new_account_link"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_below="@+id/login_button"
                    android:text="@string/Atxt"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#2EBB13"
                    android:textColorHighlight="#20A8B4"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_button" />

                <TextView
                    android:id="@+id/forget_password_link"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/need_new_account_link"
                    android:layout_marginTop="8dp"
                    android:text="Forgot Password ?"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#49B80E"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/need_new_account_link" />

                <Button
                    android:id="@+id/phone_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_below="@+id/forget_password_link"
                    android:background="@drawable/buttons"
                    android:drawableStart="@android:drawable/sym_action_call"
                    android:text="@string/txtP"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/forget_password_link" />
            </RelativeLayout>
    <!--        &lt;!&ndash;        </RelativeLayout>&ndash;&gt;-->
        </ScrollView>
</RelativeLayout>